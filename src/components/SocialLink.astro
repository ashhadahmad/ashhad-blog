---
import { Image } from "astro:assets";
const { icon, title, link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg flex flex-row justify-between border-2 border-gray-100 dark:border-gray-800 transition fade ease-in cursor-pointer select-none"
>
  <div class="flex flex-row w-full justify-center content-center">
    <div class="w-16 lg:h-14 flex justify-center">
      <Image
        src={icon}
        alt={title}
        class="p-4 block max-w-full w-auto h-auto select-none pointer-events-none"
      />
    </div>
    <div class="flex-1 text-start flex flex-col justify-center">
      <h1
        class="text-md text-black dark:text-white uppercase font-bold tracking-wide"
      >
        {title}
      </h1>
    </div>
  </div>
  <!-- <Image
    src={arrowUpRight}
    alt="arrow icon"
    class="w-6 m-2 p-1 fill-blue-500 select-none pointer-events-none"
  /> -->
  <div
    class="flex w-8 m-2 fill-white opacity-50 dark:fill-gray-900 p-1 select-none pointer-events-none"
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"
      ><rect width="256" height="256" fill="none"></rect><line
        x1="64"
        y1="192"
        x2="192"
        y2="64"
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="24"></line><polyline
        points="88 64 192 64 192 168"
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="24"></polyline></svg
    >
  </div>
</a>
