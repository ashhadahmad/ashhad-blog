---
const { link, type } = Astro.props;
const elements = link.split("/");
const fileName = elements[elements.length - 1];
const fileNameSplit = fileName.split(".");
const fileType = fileNameSplit[fileNameSplit.length - 1];
---

<a
  href={link}
  target="_blank"
  class="fill-white dark:fill-gray-900 no-underline"
>
  <div
    class="p-4 w-100 lg:max-w-sm hover:bg-slate-200 rounded-xl border border-gray-300 transition ease-in-out flex justify-between"
  >
    <div class="flex gap-3 content-end justify-start">
      <p class="m-0 w-5 self-center">
        {
          fileType && fileType === "pdf" ? (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256">
              <polyline
                points="220 152 188 152 188 208"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="24"
              />
              <line
                x1="212"
                y1="184"
                x2="188"
                y2="184"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="24"
              />
              <path
                d="M44,192H60a20,20,0,0,0,0-40H44v56"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="24"
              />
              <path
                d="M112,152v56h16a28,28,0,0,0,0-56Z"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="24"
              />
              <polyline
                points="148 32 148 92 208 92"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="24"
              />
              <>
                <rect width="256" height="256" fill="none" />
                <path
                  d="M48,108V40a8,8,0,0,1,8-8h96l56,56v20"
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="24"
                />
              </>
            </svg>
          ) : (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256">
              <path
                d="M200,224H56a8,8,0,0,1-8-8V40a8,8,0,0,1,8-8h96l56,56V216A8,8,0,0,1,200,224Z"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="24"
              />
              <>
                <rect width="256" height="256" fill="none" />
                <polyline
                  points="148 32 148 92 208 92"
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="24"
                />
              </>
            </svg>
          )
        }
      </p>
      <p class="m-0 inline-block self-center">{fileName}</p>
    </div>
    <div class="flex w-8 p-1 select-none pointer-events-none">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"
        ><rect width="256" height="256" fill="none"></rect><line
          x1="128"
          y1="40"
          x2="128"
          y2="216"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="24"></line><polyline
          points="56 144 128 216 200 144"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="24"></polyline></svg
      >
    </div>
  </div>
</a>
